<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp" />

        <!-- Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Protection Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/threatsBlockedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/danger" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Threats Blocked"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/sitesAnalyzedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sites Analyzed"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/resetStatsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Statistics"
                    android:textColor="@color/text_secondary"
                    style="?android:attr/borderlessButtonStyle" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cache Settings Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cache Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Analysis results are cached to improve performance. Adjust how long results are stored."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cache Duration:"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/cacheDurationValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="24 hours"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:gravity="end" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/cacheDurationSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="23"
                    android:progress="23"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/clearCacheButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear Cache Now"
                    android:textColor="@color/warning"
                    style="?android:attr/borderlessButtonStyle" />

                <TextView
                    android:id="@+id/lastCacheClearText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last cleared: Never"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Support Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Support &amp; Feedback"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/reportFalsePositiveButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report False Positive"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:drawablePadding="8dp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/contactSupportButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Support"
                    android:drawableStart="@android:drawable/ic_dialog_info"
                    android:drawablePadding="8dp"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Legal Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Legal &amp; Privacy"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/privacyPolicyButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:drawableStart="@android:drawable/ic_menu_view"
                    android:drawablePadding="8dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:gravity="start|center_vertical" />

                <Button
                    android:id="@+id/openSourceLicensesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open Source Licenses"
                    android:drawableStart="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:gravity="start|center_vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- About Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About PhishGuard"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/versionText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1.0.0"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="end" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Real-time phishing protection powered by advanced threat detection."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
